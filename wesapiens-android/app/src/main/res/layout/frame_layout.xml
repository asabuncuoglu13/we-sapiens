<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/storygrid_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/unit10"
        android:backgroundTint="@color/md_blue_grey_100"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/unit10">

        <LinearLayout
            android:layout_width="@dimen/unit200"
            android:padding="@dimen/unit8"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/unit3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/frame_image"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/unit3"
                android:layout_height="@dimen/unit120"
                android:scaleType="centerInside"
                tool:src="@drawable/caveman01"/>

            <TextView
                android:id="@+id/frame_name"
                android:layout_margin="@dimen/unit3"
                android:layout_width="@dimen/unit220"
                android:layout_height="wrap_content"
                tool:text="Frame Title"/>

            <TextView
                android:text="@string/questions"
                android:layout_margin="@dimen/unit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="@dimen/unit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    style="@style/CreateGameEditText"
                    android:id="@+id/frame_question_input"
                    android:layout_width="@dimen/unit160"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_question_hint"/>

                <ImageButton
                    android:id="@+id/frame_question_button"
                    android:layout_width="@dimen/unit20"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_add"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>