<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:color">@color/md_blue_grey_800</item>
    </style>

    <style name="DialogBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:color">@color/md_blue_grey_800</item>
    </style>

    <style name="DialogButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@color/md_blue_grey_800</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
